<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityback"
    android:orientation="vertical">
    <include layout="@layout/include_apptoolbar_b" />

    <com.lifecircle.view.removerecyclerview.ItemRemoveRecyclerView
        android:id="@+id/rc_mycollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10px"
    android:background="@color/white"
    android:layout_height="98px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="23px"
        android:layout_centerVertical="true"
       android:layout_marginLeft="30px"
        android:text="订单金额"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="23px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:text="￥30"/>

</com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:layout_height="98px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="23px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="支付方式"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="23px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/xiangxia"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:layout_marginRight="30px"
            android:text="贷到付款"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:layout_height="98px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="23px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="地址"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="23px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="30px"
            android:text="修改"/>

    </com.zhy.autolayout.AutoRelativeLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="2px"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23px"
        android:text="备注"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="622px"
        android:layout_height="200px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:layout_marginBottom="20px"
        android:background="@drawable/shape_shopcar_et"/>

</com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="285px"
            android:layout_height="98px"
            android:textColor="@color/white"
            android:textSize="29px"
            android:text="满20起送"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/screen_pre"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>