<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityback">
    <include layout="@layout/include_apptoolbar_b" />

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="30px"
     android:layout_below="@+id/rl_toolbar"
     android:background="@drawable/myinvit"/>

    <ImageView
        android:id="@+id/iv_myinivation_zxing"
        android:layout_width="240px"
        android:layout_height="240px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350px"
        android:src="@drawable/net_bitmap"/>

    <TextView
        android:layout_width="496px"
        android:layout_height="82px"
        android:text="点击邀请你的好友"
        android:textSize="36px"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_myinivation_zxing"
        android:layout_marginTop="76px"
        android:background="@drawable/shape_colorprimary_pre"/>






</com.zhy.autolayout.AutoRelativeLayout>