<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px">

     <ImageView
        android:id="@+id/iv_item_zhoubian_second"
        android:layout_width="54px"
        android:layout_marginTop="10px"
        android:layout_marginLeft="30px"
        android:layout_height="54px"/>

    <TextView
        android:id="@+id/tv_item_zhoubian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_item_zhoubian_second"
        android:layout_marginLeft="20px"
        android:textSize="24px"
        android:layout_marginTop="10px"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_item_zhoubian_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_zhoubian_title"
        android:layout_toRightOf="@+id/iv_item_zhoubian_second"
        android:layout_marginLeft="20px"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="23px"
        android:layout_marginTop="10px"
        android:textColor="#C6C6C6"/>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>