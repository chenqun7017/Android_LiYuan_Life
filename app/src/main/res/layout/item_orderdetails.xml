<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154px">

    <ImageView
        android:id="@+id/iv_shop_image"
        android:layout_width="98px"
        android:layout_height="110px"
        android:src="@drawable/net_bitmap"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"/>
    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/text"
        android:textSize="23px"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@+id/iv_shop_image"
        android:layout_marginLeft="10px"/>

    <TextView
        android:id="@+id/tv_shop_single_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23px"
        android:textColor="@color/black"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/iv_shop_image"
        android:layout_below="@+id/tv_shop_name"
        android:layout_marginTop="40px"/>

    <TextView
        android:id="@+id/tv_shop_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23px"
        android:textColor="@color/text"
        android:layout_toLeftOf="@+id/tv_shop_specifications"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30px"
        android:layout_marginBottom="32px"/>

    <TextView
        android:id="@+id/tv_shop_specifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23px"
        android:textColor="@color/text"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30px"
        android:layout_marginBottom="32px" />

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>