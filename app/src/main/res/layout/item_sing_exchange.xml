<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250px"
    android:layout_height="230px">

    <ImageView
        android:id="@+id/iv_item_sing_img"
        android:layout_width="62px"
        android:layout_height="68px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46px"
        android:src="@drawable/jifen_lan"/>

    <TextView
        android:id="@+id/tv_item_sing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_item_sing_img"
        android:textSize="24px"/>

    <TextView
        android:id="@+id/tv_item_sing_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_item_sing_title"
        android:textSize="23px"
        android:textColor="@color/yolle"
        android:drawablePadding="10px"
        android:drawableLeft="@drawable/jifen"/>

</com.zhy.autolayout.AutoRelativeLayout>