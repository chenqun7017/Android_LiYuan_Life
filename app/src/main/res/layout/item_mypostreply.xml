<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_mypost_userimage"
        android:layout_width="104px"
        android:layout_height="104px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:src="@drawable/userdefaultimage"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="0px"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/tv_postreply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_back"
        android:textSize="30px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/iv_mypost_userimage"
        android:text="我是如何做到的"/>

   <TextView
       android:id="@+id/tv_mypost_grade"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/tv_postreply_title"
       android:layout_marginTop="20px"
       android:layout_marginLeft="20px"
       android:textSize="22px"
       android:textColor="@color/white"
       android:paddingLeft="10px"
       android:paddingBottom="3px"
       android:paddingTop="3px"
       android:paddingRight="10px"
       android:background="@drawable/shape_mypost_pre"
       android:text="Lv4"/>

    <TextView
        android:id="@+id/tv_mypost_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_mypost_grade"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textSize="22px"
        android:textColor="@color/white"
        android:paddingLeft="10px"
        android:paddingBottom="3px"
        android:paddingTop="3px"
        android:paddingRight="10px"
        android:background="@drawable/shape_mypost_pre"
        android:text="楼主"/>

    <TextView
        android:id="@+id/tv_mypost_adress"
        android:layout_width="96px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_postreply_title"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/iv_mypost_userimage"
        android:layout_marginLeft="20px"
        android:textColor="@color/text"
        android:text="英语到全英文会议"
        android:textSize="20px"
        android:ellipsize="end"
        android:lines="1"/>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="3px"
        android:layout_height="25px"
        android:layout_marginTop="10px"
        android:background="@color/text"
        android:layout_below="@+id/tv_postreply_title"
        android:layout_toRightOf="@+id/tv_mypost_adress"
        android:layout_marginLeft="10px"/>

    <TextView
        android:id="@+id/tv_mypost_replytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_below="@+id/tv_postreply_title"
        android:layout_toRightOf="@+id/tv_line"
        android:textColor="@color/text"
        android:text="2017-11-24"
        android:textSize="20px"
        android:layout_marginLeft="10px"/>

    <TextView
        android:id="@+id/tv_mypost_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mypost_adress"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:textSize="23px"
        android:textColor="@color/text"
        android:text="两层和两层以上的房屋"
        android:layout_toRightOf="@+id/iv_mypost_userimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_mypost_userimage"
        android:layout_marginLeft="50px"
        android:layout_marginTop="10px"
        android:textSize="24px"
        android:textColor="@color/black"
        android:text="10楼"/>


    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="23px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30px"
        android:layout_marginBottom="20px"
        android:gravity="center_vertical"
        android:text="回复"
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/huifu_lv"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30px"
        android:layout_toLeftOf="@+id/tv_reply"
        android:gravity="center_vertical"
        android:layout_marginBottom="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_up_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zan_lv"/>

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10px"
            android:textSize="23px"
            android:text="点赞"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>