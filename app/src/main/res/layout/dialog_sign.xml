<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


       <com.zhy.autolayout.AutoRelativeLayout
           android:id="@+id/rl_sign_up"
           android:layout_width="630px"
           android:layout_height="717px"
           android:layout_centerInParent="true">

              <ImageView
                  android:id="@+id/iv_img_tag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/qiandao_beijingtu"/>

              <TextView
                  android:id="@+id/tv_mysing_content"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="恭喜您今日签到成功"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="320px"
                  android:textColor="@color/black"
                  android:textSize="30px"/>
              <TextView
                  android:id="@+id/tv_mysing_nums"
                  android:layout_below="@+id/tv_mysing_content"
                  android:textColor="@color/black"
                  android:textSize="50px"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="30px"
                  android:text="+5金币"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/tv_cancle"
                  android:layout_below="@+id/iv_img_tag"
                  android:layout_width="match_parent"
                  android:layout_height="200px" />




       </com.zhy.autolayout.AutoRelativeLayout>








</com.zhy.autolayout.AutoRelativeLayout>