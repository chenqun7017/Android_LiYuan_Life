<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityback"
    android:orientation="vertical">

    <include layout="@layout/include_apptoolbar_b" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@+id/sv_mysing"
            android:text="每天提醒我签到"
            android:textColor="@color/text"
            android:textSize="24px" />

        <com.lifecircle.widget.SwitchView
            android:id="@+id/sv_mysing"
            android:layout_width="90px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="378px"
        android:background="@drawable/beijingtupian">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42px"
            android:background="@drawable/shape_mysing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:text="已签到"
                android:textColor="#AF7F24"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_mysing_center_line"
                android:layout_width="110px"
                android:layout_height="3px"
                android:layout_centerInParent="true"
                android:background="#AF7F24" />

            <TextView
                android:id="@+id/tv_sign_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mysing_center_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:text=""
                android:textColor="#AF7F24"
                android:textSize="23px" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="48px"
            android:layout_marginRight="42px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="22px"
                android:layout_marginRight="25px"
                android:background="#AF7F24" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_onmonday"
                android:layout_width="42px"
                android:layout_height="47px"
                android:layout_above="@+id/rl_onmonday"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="3px"
                android:visibility="gone"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_onmonday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>


            <ImageView
                android:id="@+id/rl_onmonday"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14px"
                android:background="@drawable/oval_mysing_w"
                app:layout_auto_basewidth="height" />

            <ImageView
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/oval_mysing_y"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/tv_onmonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_onmonday"
                android:layout_marginTop="7px"
                android:textColor="#A97416"
                android:textSize="23px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_tuesday"
                android:layout_width="42px"
                android:layout_height="47px"
                android:layout_above="@+id/rl_onmonday"
                android:layout_marginBottom="5px"
                android:visibility="gone"
                android:layout_marginLeft="106px"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:id="@+id/iv_tuesday"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:layout_toRightOf="@+id/rl_onmonday"
                android:background="@drawable/oval_mysing_a"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/tv_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tuesday"
                android:layout_marginLeft="98px"
                android:layout_marginTop="7px"
                android:textColor="#A97416"
                android:textSize="24px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_wednesday"
                android:layout_width="42px"
                android:layout_height="47px"
                android:layout_above="@+id/rl_onmonday"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="209px"
                android:visibility="gone"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>


            <ImageView
                android:id="@+id/iv_wednesday"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:layout_toRightOf="@+id/iv_tuesday"
                android:background="@drawable/oval_mysing_a"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/tv_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_wednesday"
                android:layout_marginLeft="200px"
                android:layout_marginTop="7px"
                android:textColor="#A97416"
                android:textSize="24px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_thursdays"
                android:layout_width="42px"
                android:layout_height="47px"
                android:layout_above="@+id/rl_onmonday"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="313px"
                android:visibility="gone"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_thursdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:id="@+id/iv_thursdays"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:layout_toRightOf="@+id/iv_wednesday"
                android:background="@drawable/oval_mysing_a"
                app:layout_auto_basewidth="height" />


            <TextView
                android:id="@+id/tv_thursdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_thursdays"
                android:layout_marginLeft="300px"
                android:layout_marginTop="7px"
                android:textColor="#A97416"
                android:textSize="24px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_fridays"
                android:layout_width="42px"
                android:layout_height="47px"
                android:layout_above="@+id/rl_onmonday"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="416px"
                android:visibility="gone"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_fridays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:id="@+id/iv_fridays"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:layout_toRightOf="@+id/iv_thursdays"
                android:background="@drawable/oval_mysing_a"
                app:layout_auto_basewidth="height" />


            <TextView
                android:id="@+id/tv_fridays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_fridays"
                android:layout_marginLeft="405px"
                android:layout_marginTop="7px"
                android:textColor="#A97416"
                android:textSize="24px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_saturday"
                android:layout_width="42px"
                android:layout_height="47px"
                android:visibility="gone"
                android:layout_above="@+id/rl_onmonday"
                android:layout_marginBottom="5px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="95px"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:id="@+id/iv_saturday"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:layout_toRightOf="@+id/iv_fridays"
                android:background="@drawable/oval_mysing_a"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/tv_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_saturday"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7px"
                android:layout_marginRight="90px"
                android:textColor="#A97416"
                android:textSize="24px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_top_sunday"
                android:layout_width="42px"
                android:layout_height="47px"
                android:layout_above="@+id/rl_onmonday"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5px"
                android:layout_marginRight="5px"
                android:visibility="gone"
                android:background="@drawable/sing_img">

                <TextView
                    android:id="@+id/tv_top_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginTop="5px"
                    android:textColor="@android:color/white"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:id="@+id/iv_sunday"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:background="@drawable/oval_mysing_a"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/tv_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_sunday"
                android:layout_marginTop="7px"
                android:textColor="#A97416"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="你可以兑换以下商品"
            android:textColor="@color/black"
            android:textSize="24px" />


        <TextView
            android:id="@+id/tv_all_singprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:textColor="@color/black"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_sing_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@android:color/white">

    </android.support.v7.widget.RecyclerView>


    </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v4.widget.NestedScrollView>
</com.zhy.autolayout.AutoLinearLayout>