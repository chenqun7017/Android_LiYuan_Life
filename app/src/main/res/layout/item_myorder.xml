<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_my_order_time"
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:gravity="center_vertical"
        android:textColor="@color/text"
        android:textSize="24px"
        android:paddingLeft="30px"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/activityback"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="198px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_myorder_image"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_marginLeft="30px"
            android:src="@drawable/net_bitmap"
            android:layout_marginTop="20px"/>

        <ImageView
            android:id="@+id/iv_myorder_image01"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_marginLeft="10px"
            android:src="@drawable/net_bitmap"
            android:layout_marginTop="20px"/>

        <ImageView
            android:id="@+id/iv_myorder_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="29px"
            android:src="@drawable/gengduos"/>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_item_myorder_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24px"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30px"
                android:layout_marginRight="30px"/>

            <TextView
                android:id="@+id/tv_myorder_allnums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="23px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"/>
            <TextView
                android:id="@+id/tv_myorder_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_below="@+id/tv_myorder_allnums"
                android:textSize="23px"
                android:layout_marginTop="10px"
                android:textColor="@color/colorPrimary"/>

        </com.zhy.autolayout.AutoRelativeLayout>




    </com.zhy.autolayout.AutoLinearLayout>




</com.zhy.autolayout.AutoLinearLayout>