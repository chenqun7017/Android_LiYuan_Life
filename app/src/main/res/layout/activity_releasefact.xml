<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:splitMotionEvents="false"
    android:background="@color/activityback">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:id="@+id/rl_toolbar"
        android:layout_height="88px">

        <TextView
            android:id="@+id/toolbar_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20px"
            android:textSize="23px"
            android:textColor="@color/text_back"
            android:text="取消"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"/>


        <TextView
            android:id="@+id/toolbar_center_text"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="35px"
            android:text="爆料"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/toolbar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="23px"
            android:text="发布"
            android:padding="20px"
            android:textColor="@color/text_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <EditText
        android:id="@+id/et_release_title"
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:background="@color/white"
        android:hint="请输入标题"
        android:textColor="@color/black"
        android:layout_below="@+id/rl_toolbar"
        android:textSize="24px"
        android:paddingLeft="30px"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"/>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10px"
        android:layout_marginBottom="2px"
        android:layout_below="@+id/et_release_title"
        android:layout_above="@+id/ll_bottom"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_release_tab01"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/jianpan"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_release_tab02"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/tupian"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_release_tab03"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/biaoqing"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_release_tab04"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/lianjie"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_release_tab05"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shipin"/>
        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>