<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="521px"
    android:layout_height="566px"
    android:gravity="center_horizontal"
    android:background="@drawable/beijing"
    android:layout_centerInParent="true"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:src="@drawable/katong"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20px"
        android:textSize="30px"
        android:text="积分顶贴"/>
    <TextView
        android:id="@+id/tv_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="@color/text_back"
        android:layout_marginTop="50px"
        android:text="本次顶贴免费,是否继续?"/>

    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20px"
        android:text="详细规则>"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64px"
        android:orientation="horizontal">
   <TextView
       android:id="@+id/tv_canle"
    android:layout_width="188px"
    android:layout_height="74px"
       android:textColor="@color/white"
       android:gravity="center"
       android:background="@drawable/top_nor"
         android:layout_marginLeft="50px"
       android:textSize="30px"
       android:text="取消"/>

        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="188px"
            android:layout_height="74px"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/top_pre"
            android:layout_marginLeft="50px"
            android:textSize="30px"
            android:text="确定"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>