<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_apptoolbar_b" />

    <ImageView
        android:id="@+id/iv_login_img"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        app:layout_auto_basewidth="height"
        android:src="@drawable/userdefaultimage" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="80px"
        android:background="@drawable/shape_colorprimary_nor"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="47px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:src="@drawable/shouji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="手机号码"
            android:textColor="@color/colorPrimary"
            android:textSize="26px" />

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:lines="1"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:textSize="26px"
            android:textColor="@color/colorPrimary"
            android:maxLength="11"
            android:inputType="phone"
            android:background="@null" />


    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="525px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_colorprimary_nor">

            <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:src="@drawable/yanzhengma" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="26px" />

            <EditText
                android:id="@+id/et_login_code"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="17px"
                android:maxLength="5"
               android:textSize="26px"
                android:textColor="@color/colorPrimary"
                android:inputType="number"
                android:layout_weight="1"
                android:background="@null" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_login_code"
            android:layout_width="155px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_colorprimary_nor"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_login_btn"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="158px"
        android:background="@drawable/shape_colorprimary_pre"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@android:color/white"
        android:textSize="26px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="164px"
        android:text="第三方登陆"
        android:textColor="@color/text"
        android:textSize="24px" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="40px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_login_qq"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_login_qq"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_login_qq"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:text="QQ"
                android:textColor="@color/text"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_login_weixi"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_login_weixi"
                android:layout_width="47px"
                android:layout_height="47px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_login_weixi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:text="微信"
                android:textColor="@color/text"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_login_weibo"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_login_weibo"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_login_weibo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:text="微博"
                android:textColor="@color/text"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>