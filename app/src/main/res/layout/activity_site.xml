<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityback"
    android:orientation="vertical">
    <include layout="@layout/include_apptoolbar_b" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@android:color/white">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:layout_marginBottom="34px"
            android:text="联系人"
            android:textColor="@color/black"
            android:textSize="28px" 
            />
        
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="电话"
            android:textColor="@color/black"
            android:textSize="28px"
            android:layout_marginLeft="20px"/>

        <EditText
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dianhua"
            android:text="小气鬼"
            android:textColor="@color/text"
            android:textSize="24px" 
            android:layout_marginLeft="80px"
            android:background="@null"/>


        <TextView
            android:id="@+id/tv_address_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="通讯录"
            android:textSize="24px"
            />

        <ImageView
            android:id="@+id/jiahao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/xiangyou" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/idzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="地址"
            android:layout_marginLeft="20px"
            android:textColor="@color/black"
            android:textSize="24px" />

        <EditText
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/idzhi"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="121212121"
            android:textColor="@color/text"
            android:textSize="24px" 
            android:layout_marginLeft="88px"/>
        <EditText
            android:id="@+id/tv_residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/idzhi"
            android:layout_below="@+id/tv_persondata_profile"
            android:background="@null"
            android:text="45454545545"
            android:textColor="@color/text"
            android:textSize="24px"
            android:layout_marginLeft="88px"
            android:layout_marginTop="20px"
            />

       

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginTop="3px"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="门牌号"
            android:textColor="@color/black"
            android:textSize="28px" 
            android:layout_marginLeft="20px"/>
        
        <EditText
            android:id="@+id/tv_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="6号楼2606"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/men"
            android:background="@null"
            android:textSize="28px"
            android:textColor="@color/text"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/xiangyou"
            android:id="@+id/iv_house" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px">
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="690px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:text="确定"
            android:textSize="28px"
            android:textColor="#ffff"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>